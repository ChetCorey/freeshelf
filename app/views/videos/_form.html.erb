<%= simple_form_for(@video) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :contributor %>
    <%= f.input :summary %>
    <%= f.input :link %>
    <%= f.input :tag_list, :hint => "Separate tags with commas." %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
